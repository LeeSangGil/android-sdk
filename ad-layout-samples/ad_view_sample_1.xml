<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingRight="4dp">

  <ImageView
    android:id="@id/namo_ad_image"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignBottom="@id/namo_ad_text"
    android:src="@drawable/namo_placeholder" />
`
  <FrameLayout
    android:id="@+id/namo_icon_frame"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignTop="@id/namo_advertiser_name"
    android:layout_alignBottom="@id/namo_advertiser_name"
    android:layout_marginLeft="124dp">

    <ImageView
      android:id="@+id/namo_advertiser_icon"
      android:layout_gravity="center"
      android:layout_height="16dp"
      android:layout_width="16dp"
      android:src="@drawable/namo_placeholder"/>
  </FrameLayout>

  <TextView
    android:id="@id/namo_advertiser_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/namo_icon_frame"
    android:singleLine="true"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="1dp"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Sample Advertiser Name" />

  <TextView
    android:id="@id/namo_ad_title"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/namo_advertiser_name"
    android:layout_alignLeft="@id/namo_icon_frame"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Sample Ad Title - typically up to 50 characters long" />

  <TextView
    android:id="@id/namo_ad_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/namo_ad_title"
    android:layout_alignLeft="@id/namo_icon_frame"
    android:paddingBottom="4dp"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Sample ad text - typically between 20 and 200 characters. You should design your layout so that the ad text can wrap appropriately." />

</RelativeLayout>
